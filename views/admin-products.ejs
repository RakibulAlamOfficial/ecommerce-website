<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin - Manage Products Fashion World</title>
    <link rel="stylesheet" href="/css/style.css">
     <!-- This is the NEW, CORRECTED Favicon link -->
<link rel="icon" type="image/x-icon" href="/img/logo/favicon.ico">
    
</head>
<body>
    <section class="section-p1">
        <h1>Admin Panel - Manage Products</h1>
        <a href="/">Back to Main Site</a> | <a href="/logout">Logout</a>
    </section>

    <section class="section-p1">
        <h2>Add New Product</h2>
        <!-- This is the NEW, upgraded Admin Form -->
<form action="/admin/products/add" method="POST" class="admin-form">
    <input type="text" name="name" placeholder="Product Name" required>
    <input type="text" name="brand" placeholder="Brand (e.g., ZaZa)" required>
    <input type="number" name="price" placeholder="Price" required>
    
    <textarea name="description" placeholder="Product Description..." rows="4" required></textarea> <!-- NEW -->
    
    <input type="text" name="image_url" placeholder="Main Image Path (e.g., img/products/f1.jpeg)" required>
    <input type="text" name="thumb1" placeholder="Thumbnail 1 Path (optional)"> <!-- NEW -->
    <input type="text" name="thumb2" placeholder="Thumbnail 2 Path (optional)"> <!-- NEW -->
    <input type="text" name="thumb3" placeholder="Thumbnail 3 Path (optional)"> <!-- NEW -->
    <input type="text" name="thumb4" placeholder="Thumbnail 4 Path (optional)"> <!-- NEW -->

    <button type="submit" class="normal">Add Product</button>
</form>
    </section>
    
    <section id="cart" class="section-p1">
        <h2>Existing Products</h2>
        <table width="100%">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Image</td>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                   <!-- This is the NEW table row with Edit/Delete buttons -->
            <tr>
             <td><%= product.id %></td>
             <td><img src="/<%= product.image_url %>" alt=""></td>
            <td><%= product.name %></td>
            <td><%= product.price %> TK</td>
             <td>
                <!-- Edit Button (a simple link) -->
              <a href="/admin/products/edit/<%= product.id %>" class="btn-edit">Edit</a>
        
                <!-- Delete Button (inside its own form) -->
                <form action="/admin/products/delete/<%= product.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
            <button type="submit" class="btn-delete">Delete</button>
                 </form>
           </td>
               </tr>
                <% }); %>
            </tbody>
        </table>
    </section>
</body>
</html>