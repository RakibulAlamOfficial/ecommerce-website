                    <li><a href="/signup">Signup</a></li>
                <% } %>
                <a href="#" id="close"><i class="far fa-times"></i></a>
            </ul>
        </div>
        <div id="mobile">
            <a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
            <i id="bar" class="fas fa-outdent"></i>
        </div>
    </section>

    <section id="page-header" class="about-me">
        <h2>#cart</h2>
        <p>Review your items and proceed to checkout.</p>
    </section>

    <section id="cart" class="section-p1">
        <table width="100%">
            <thead>
                <tr>
                    <td>Remove</td>
                    <td>Image</td>
                    <td>Product</td>
                    <td>Price</td>
                    <td>Quantity</td>
                    <td>Subtotal</td>
                </tr>
            </thead>
          <!-- This is the NEW, responsive-friendly tbody -->
<tbody>
    <% if (cart.length > 0) { %>
        <% cart.forEach(item => { %>
            <tr>
                <td data-label="Remove"><a href="#"><i class="far fa-times-circle"></i></a></td>
                <td data-label="Image"><img src="/<%= item.image_url %>" alt=""></td>
                <td data-label="Product"><%= item.name %></td>
                <td data-label="Price"><%= item.price %> TK</td>
                <td data-label="Quantity"><input type="number" value="<%= item.quantity %>"></td>
                <td data-label="Subtotal"><%= item.price * item.quantity %> TK</td>
            </tr>
        <% }); %>
    <% } else { %>
        <tr>
            <td colspan="6">Your cart is empty.</td>
        </tr>
    <% } %>
</tbody>
        </table>
    </section>

    <section id="cart-add" class="section-p1">
        <div id="subtotal">
            <h3>Cart Totals</h3>
            <table>
                <tr>
                    <td>Cart Subtotal</td>
                    <td><%= total %> TK</td>
                </tr>
                <tr>
                    <td>Shipping</td>
                    <td>Free</td>
                </tr>
                <tr>
                    <td><strong>Total</strong></td>
                    <td><strong><%= total %> TK</strong></td>
                </tr>
            </table>
            <button class="normal">Proceed to checkout</button>
        </div>
    </section>

