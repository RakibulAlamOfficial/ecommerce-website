<!-- Find and replace your entire login/logout if/else block with this -->

<% if (isLoggedIn) { %>
    <!-- If the user IS logged in... -->
    <li><span>Welcome, <%= username %>!</span></li>
    
    <% if (isAdmin) { %>
        <!-- ...AND they are an admin, show the admin link -->
        <li><a href="/admin/products" style="color: red; font-weight: bold;">Admin Panel</a></li>
    <% } %>

    <li><a href="/logout">Logout</a></li>

<% } else { %>
    <!-- If the user IS NOT logged in, show this: -->
    <li><a href="/login"><i class="fa-solid fa-user"></i></a></li>
    <li><a href="/signup">Signup</a></li>
<% } %>
            <a href="#" id="close"><i class="far fa-times"></i></a>
          
             
