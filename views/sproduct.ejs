    </section>
<section id="prodeatails" class="section-p1">
   <!-- Main Image -->
<div class="single-pro-image">
    <img src="/<%= product.image_url %>" width="100%" id="mainimg" alt="<%= product.name %>">
    <!-- Keep your small image group as is for now, or make it dynamic later -->

   <!-- This is the NEW dynamic thumbnail group -->
<div class="smallimggtoup">
    <!-- We will only show a thumbnail if its path exists in the database -->
    <% if (product.thumb1) { %>
    <div class="small-img-col">
        <img src="/<%= product.thumb1 %>" width="100%" class="small-img" alt="Thumbnail 1">
    </div>
    <% } %>
    
    <% if (product.thumb2) { %>
    <div class="small-img-col">
        <img src="/<%= product.thumb2 %>" width="100%" class="small-img" alt="Thumbnail 2">
    </div>
    <% } %>

    <% if (product.thumb3) { %>
    <div class="small-img-col">
        <img src="/<%= product.thumb3 %>" width="100%" class="small-img" alt="Thumbnail 3">
    </div>
    <% } %>

    <% if (product.thumb4) { %>
    <div class="small-img-col">
        <img src="/<%= product.thumb4 %>" width="100%" class="small-img" alt="Thumbnail 4">
    </div>
    <% } %>
</div>
</div>

<!-- Product Details -->
<!-- This is the NEW, functional "Add to Cart" form -->
<div class="single-pro-deatils">
    <h6>Home / Salower</h6>
    <h4><%= product.name %></h4>
    <h2><%= product.price %>.00 TK</h2>

    <form action="/cart/add/<%= product.id %>" method="POST">
        <select>
            <option>Select Size</option>
            <option>XL</option>
            <option>XXL</option>
        </select>
        <input type="number" name="quantity" value="1" min="1">
        <button type="submit" class="normal">Add To Cart</button>
    </form>

   <h4>Product Details</h4>
<span><%= product.description %></span>
</div>
</section>

<!-- This is the NEW, CORRECT code for sproduct.ejs -->
<section id="product1" class="section-p1">
    <h2>featured products</h2>
    <p>Bangladeshi Collection for eid New Morden Design</p>
    <div class="pro-container">
        
        <% featuredProducts.forEach(product => { %>
            <div class="pro" onclick="window.location.href='/product/<%= product.id %>'">
                <img src="/<%= product.image_url %>" alt="<%= product.name %>">
                <div class="des">
                    <span><%= product.brand %></span>
                    <h5><%= product.name %></h5>
                    <div class="star">
                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                    </div>
                    <h4><%= product.price %>TK</h4>
                </div>
                <a href="#"><i class="fa-solid fa-cart-shopping"></i></a>
            </div>
        <% }); %>

    </div>
</section>

<section id="newslatter" class="section-p1 section-m1">
