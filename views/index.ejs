            <!-- This is the NEW dynamic login/logout section -->

<!-- Find and replace your entire login/logout if/else block with this -->

<% if (isLoggedIn) { %>
    <li><span>Welcome, <%= username %>!</span></li>
    <% if (isAdmin) { %>
        <li><a href="/admin" style="color: red; font-weight: bold;">Admin Panel</a></li>
    <% } %>
    <li><a href="/logout">Logout</a></li>
<% } else { %>
    <li><a href="/login"><i class="fa-solid fa-user"></i></a></li>
    <li><a href="/signup">Signup</a></li>
<% } %>
            <a href="#" id="close"><i class="far fa-times"></i></a>
          
             
        </ul>
    </div>
  <div id="mobile">
    <a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
    <i id="bar" class="fas fa-outdent"></i>
  </div>
    </section>

   <!-- This is the NEW, SAFER dynamic Hero section -->

<% if (activeBanner) { %>
    <!-- If an active banner exists, create the section with a background image -->
    <section id="hero" style="background-image: url('/<%= activeBanner.image_url %>')">
        <h4><%= activeBanner.subtitle %></h4>
        <h2><%= activeBanner.title %></h2>
        <h1><%= activeBanner.details %></h1>
        <p>save more with coupons & up to 70% off !</p>
        <a href="<%= activeBanner.button_link %>"><button><%= activeBanner.button_text %></button></a>
    </section>
<% } else { %>
    <!-- Otherwise, create a fallback hero section without a background image -->
    <section id="hero">
        <h2>Welcome to our store!</h2>
        <p>Check out our latest products.</p>
    </section>
<% } %>

    <section id="feature" class="section-p1">
